
@{
    ViewData["Title"] = "Login Page";
}


<div class="mask d-flex align-items-center h-100 gradient-custom-3 bg-light">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-body px-5 py-3">
                        <h2 class="text-uppercase text-left mb-4 font-weight-bold">Login</h2>
                        <form>
                            <div class="form-outline mb-3">
                                <h5><label class="form-label mb-0" for="formEmail">Your Email</label></h5>
                                <div class="input-group">
                                    <input type="email" id="formEmail" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-outline mb-3">
                                <h5><label class="form-label mb-0" for="formPswd">Password</label></h5>
                                <div class="input-group">

                                    <input type="password" id="formPswd" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"><i class="fas fa-lock"></i></span></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-info btn-block btn-lg gradient-custom-4 text-body">Log In</button>
                            </div>

                            <p class="text-center text-muted mt-2 mb-0">No account yet? Please Sign Up <a class="fw-bold text-body" href="/Home/Register"><u class="text-info">Register here</u></a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



