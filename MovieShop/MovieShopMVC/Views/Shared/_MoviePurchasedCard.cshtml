@model ApplicationCore.Models.UserPurchaseResponseModel
@using System.Globalization

<div class="card mb-4 shadow">
    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">
        <img src="@Model.MoviePosterUrl" class="img-fluid position-relative" alt="@Model.MovieId" />
    </a>
    <button class="position-sticky container-fluid justify-content-center bg-secondary text-white btn-secondary " data-target="#purchaseModal_@Model.MovieId" data-toggle="modal">Purchase Details</button>
    <div class="modal" id="purchaseModal_@Model.MovieId" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" style="width:700px;">
                <div class="modal-header">
                    <h4 class="modal-title">Purchase Details</h4>
                    <button class="close float-right" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-5">
                            <img src="@Model.MoviePosterUrl" alt="@Model.MovieId" style="width:100%;"/>
                        </div>
                        <div class="col">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <i class="far fa-calendar-alt mr-2"></i> Purchased Date
                                    <span class="badge badge-pill badge-dark">@Model.PurchaseDateTime.ToShortDateString()</span>
                                </li>
                                <li class="list-group-item">
                                    <i class="far fa-money-bill-alt"></i> Price
                                    <span class="badge badge-pill badge-pill badge-dark">
                                        @Model.TotalPrice.ToString("C2")
                                    </span>
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-check-lg"></i> Purchase Number
                                    <span class="badge badge-pill badge-dark">@Model.PurchaseNumber</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

