
@{
    ViewData["Title"] = "Register";
}

<script src="
https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>

<div class="mask d-flex align-items-center h-100 gradient-custom-3 bg-light" style="height:600px;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-body px-5 py-3">
                        <h2 class="text-uppercase text-left mb-4 font-weight-bold">Register</h2>
                        <form>
                            <div class="form-outline mb-2">
                                <h6><label for="formFirstName" class="mb-0 form-label">Your First Name</label></h6>
                                <div class="input-group">
                                    <input type="text" id="formFirstName" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                                </div>
                            </div>
                            <div class="form-outline mb-2">
                                <h6><label class="form-label mb-0" for="formLastName">Your Last Name</label></h6>
                                <div class="input-group">
                                    <input type="text" id="formLastName" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"><i class="fas fa-user"></i></span></div>
                                </div>
                            </div>

                            <div class="form-outline mb-2">
                                <h6><label class="form-label mb-0" for="formEmail">Your Email</label></h6>
                                <div class="input-group">
                                    <input type="text" id="formEmail" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"><i class="fas fa-envelope"></i></span></div>
                                </div>
                            </div>

                            <div class="form-outline mb-2">
                                <h6><label class="form-label mb-0" for="datepicker">Your Date of birth</label></h6>
                                <div class="input-group">
                                    <input type="date" id="datepicker" class="pt-0 form-control form-control-lg" placeholder="mm/dd/yyyy">
                                    <div class="input-group-append"><span class="input-group-text"><i class="bi bi-calendar2-week"></i></span></div>
                                </div>
                            </div>

                            <div class="form-outline mb-2">
                                <h6><label class="form-label mb-0" for="formPswd">Password</label></h6>
                                <div class="input-group">
                                    <input type="password" id="formPswd" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"> <i class="fas fa-lock"></i></span></div>
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <h6><label class="form-label mb-0" for="formCPswd">Confirm your password</label></h6>
                                <div class="input-group">
                                    <input type="password" id="formCPswd" class="pt-0 form-control form-control-lg">
                                    <div class="input-group-append"><span class="input-group-text"><i class="fas fa-lock"></i></span></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="button" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                            </div>

                            <p class="text-center text-muted mt-2 mb-0">Have already an account? <a class="fw-bold text-body" href="/User/Login"><u>Login here</u></a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



